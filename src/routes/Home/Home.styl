@require '../../styles/base'

.route-home
  $cram()
  overflow: hidden;
  &[screenIndex='1']
    .ctrl1
      background: white
    .screen
      transform: translateY(0);
  &[screenIndex='2']
    .ctrl2
      background: white
    .screen
      transform: translateY(-100%);
  &[screenIndex='3']
    .ctrl3
      background: white
    .screen
      transform: translateY(-200%);
  &[screenIndex='4']
    .ctrl4
      background: white
    .screen
      transform: translateY(-300%);
  .ctrls
    position: absolute;
    z-index: 1
    right: $rem(2)
    top 50%
    transform: translateY(-50%)
    .ctrl
      box-sizing: border-box;
      width: $rem(1.4)
      height: $rem(1.4)
      border $rem(.2) solid white
      border-radius: 50%
      margin: $rem(.4) 0
  .screens
    .screen
      $cram()
      height: 100%
      overflow: auto;
      transition: 1.2s
      .inner
        width: $rem(120)
        min-height: 100%
        margin: auto;
        position: relative;
      &.screen1
        background: url(./screen1.jpg) 50% 50% no-repeat,
          url(./screen1bg.jpg)
        .inner
          .sprite
            position: absolute;
            top 25%
            left: $rem(9.5)
            width: 476px;
            height: 373px
            background: url(./sprite1.png)
          .content
            position: absolute;
            top: 23%
            right: $rem(8)
            color: white
            text-align: center;
            .welcome
              font-size: $rem(2.4)
              font-weight: bold;
            .owner
              font-size: $rem(7.4)
              font-weight: bold;
            .career
              font-size: $rem(1.2)
              font-weight: bold;
              line-height: 1.8
            .story
              font-size: $rem(1.2)
              line-height: 1.8
            .explore
              font-size: $rem(1.4)
              font-weight: bold;
              background: rgba(255,255,255,0.25);
              border: $rem(.2) solid white;
              line-height: $rem(3)
              width: $rem(12.5)
              margin-top: $rem(1.6)
              display: inline-block;
      &.screen2
        top 100%
        background: url(./screen2.png) 50% 100% no-repeat,
          url(./screen2bg.jpg)
        .inner
          display: flex;
          justify-content space-around
          align-items: center;
          .experience
            height: $rem(67)
            display: flex;
            flex-direction column
            justify-content: space-between;
            >div
              flex: 1
              font-size: $rem(1.8)
              display: flex;
              align-items: center;
              text-align: center;
              .year
                flex 0 0 $rem(6)
                line-height: $rem(6)
                border-radius: 50%
                background: #5E4D5C;
                color: white
              .place
                flex: 0 0 $rem(25)
                color: #5E4D5C
                position: relative;
                line-height: 1.2
                .thing
                  position: absolute;
                  top 100%
                  right: 0
                  left 0
                  margin-top: $rem(2)
                  font-size: $rem(1.4)
                  color: white
          .sprite
            width: 270px;
            height: 352px
            background: url(./sprite2.png)
      &.screen3
        top 200%
        background: url(./screen3.png) 50% 100% no-repeat,
          url(./screen3bg.jpg)
        .inner
          .content
            color: white
            position: absolute;
            left: $rem(7)
            bottom: $rem(20)
            width: $rem(37)
            .name
              font-size $rem(2)
              font-weight bold
              margin-bottom: $rem(1)
            .title
              font-size $rem(1.4)
              font-weight bold
              margin-bottom: $rem(1)
            .intro
              font-size $rem(1.2)
              font-weight bold
              line-height: 2
              margin-bottom: $rem(2)
            .goodat
              font-size $rem(1.2)
              font-weight bold
              .skills
                display: flex;
                margin-top: $rem(2)
                >div
                  flex: 0 0 $rem(4.4)
                  line-height $rem(4.4)
                  border $rem(.2) solid white
                  border-radius: 50%
                  margin-right: $rem(1)
                  text-align: center;
      &.screen4
        top 300%
        background: url(./screen4bg.jpg)
        .inner
          .title
            font-size: $rem(2.4)
            color white
            text-align: center;
            font-weight: bold;
            padding-top: $rem(4)
          .filter
            font-size: $rem(1.4)
            color white
            text-align: center;
            font-weight: bold;
            padding: $rem(1.5) 0
            >a
              margin: 0 $rem(1)
              cursor: pointer;
              &:hover
                text-decoration: underline;
          .works
            display: flex;
            flex-wrap: wrap;
            >div
              height: $rem(30)
              margin-top $rem(1)
              margin-bottom $rem(1)
              position: relative;
              overflow: hidden;
              &:hover
                .detail
                  transform: translateY(0%);
              img
                width: 100%
                height: 100%
                vertical-align: middle;
              .detail
                $cram()
                background: #4A1143;
                border: 3px solid white;
                color: white
                display: flex;
                flex-direction column
                justify-content: center;
                align-items: center;
                transition: .6s
                transform: translateY(100%);
                .name
                  font-size: $rem(1.8)
                  font-weight: bold;
                  margin-bottom: $rem(2)
                .link
                  font-size: $rem(1.4)
                  font-weight: bold;
                  border: 2px solid white
                  line-height: $rem(3)
                  width: $rem(12)
                  text-align: center;
          .contact
            padding: 60px 0
            text-align: center;
            .handle
              display: inline-block;
              width: $rem(12)
              line-height: $rem(3)
              border: 2px solid white
              font-size: $rem(1.4)
              color: white
              background: rgba(255,255,255,0.25);
          .ba
            text-align: center;
            padding: 10px 0
