@require '../../styles/base'

.route-home
  $cram()
  overflow: hidden;
  &[screenIndex='1']
    .ctrl1
      background: white
    .screen
      transform: translateY(0);
  &[screenIndex='2']
    .ctrl2
      background: white
    .screen
      transform: translateY(-100%);
  &[screenIndex='3']
    .ctrl3
      background: white
    .screen
      transform: translateY(-200%);
  &[screenIndex='4']
    .ctrl4
      background: white
    .screen
      transform: translateY(-300%);
  .ctrls
    position: absolute;
    z-index: 1
    right: 2rem
    top 50%
    transform: translateY(-50%)
    .ctrl
      box-sizing: border-box;
      width: 1.4rem
      height: 1.4rem
      border .2rem solid white
      border-radius: 50%
      margin: .4rem 0
  .screens
    .screen
      $cram()
      height: 100%
      overflow: auto;
      transition: 1.2s
      .inner
        width: 1200px
        min-height: 100%
        margin: auto;
        position: relative;
      &.screen1
        background: url(./screen1.jpg) 50% 50% no-repeat,
          url(./screen1bg.jpg)
        .inner
          .sprite
            position: absolute;
            top 25%
            left: 9.5rem
            width: 476px;
            height: 373px
            background: url(./sprite1.png)
          .content
            position: absolute;
            top: 23%
            right: 8rem
            color: white
            text-align: center;
            .welcome
              font-size: 2.4rem
              font-weight: bold;
            .owner
              font-size: 7.4rem
              font-weight: bold;
            .career
              font-size: 1.2rem
              font-weight: bold;
              line-height: 1.8
            .story
              font-size: 1.2rem
              line-height: 1.8
            .explore
              font-size: 1.4rem
              font-weight: bold;
              background: rgba(255,255,255,0.25);
              border: .2rem solid white;
              line-height: 3rem
              width: 12.5rem
              margin-top: 1.6rem
              display: inline-block;
      &.screen2
        top 100%
        background: url(./screen2.png) 50% 100% no-repeat,
          url(./screen2bg.jpg)
        .inner
          display: flex;
          justify-content space-around
          align-items: center;
          .experience
            height: 67rem
            display: flex;
            flex-direction column
            justify-content: space-between;
            >div
              flex: 1
              font-size: 1.8rem
              display: flex;
              align-items: center;
              text-align: center;
              .year
                flex 0 0 6rem
                line-height: 6rem
                border-radius: 50%
                background: #5E4D5C;
                color: white
              .place
                flex: 0 0 25rem
                color: #5E4D5C
                position: relative;
                line-height: 1.2
                .thing
                  position: absolute;
                  top 100%
                  right: 0
                  left 0
                  margin-top: 2rem
                  font-size: 1.4rem
                  color: white
          .sprite
            width: 270px;
            height: 352px
            background: url(./sprite2.png)
      &.screen3
        top 200%
        background: url(./screen3.png) 50% 100% no-repeat,
          url(./screen3bg.jpg)
        .inner
          .content
            color: white
            position: absolute;
            left: 7rem
            bottom: 20rem
            width: 37rem
            .name
              font-size 2rem
              font-weight bold
              margin-bottom: 1rem
            .title
              font-size 1.4rem
              font-weight bold
              margin-bottom: 1rem
            .intro
              font-size 1.2rem
              font-weight bold
              line-height: 2
              margin-bottom: 2rem
            .goodat
              font-size 1.2rem
              font-weight bold
              .skills
                display: flex;
                margin-top: 2rem
                >div
                  flex: 0 0 4.4rem
                  line-height 4.4rem
                  border .2rem solid white
                  border-radius: 50%
                  margin-right: 1rem
                  text-align: center;
      &.screen4
        top 300%
        background: url(./screen4bg.jpg)
        .inner
          .title
            font-size: 2.4rem
            color white
            text-align: center;
            font-weight: bold;
            padding-top: 4rem
          .filter
            font-size: 1.4rem
            color white
            text-align: center;
            font-weight: bold;
            padding: 1.5rem 0
            >a
              margin: 0 1rem
              cursor: pointer;
              &:hover
                text-decoration: underline;
          .works
            display: flex;
            flex-wrap: wrap;
            >div
              height: 30rem
              margin-top 1rem
              margin-bottom 1rem
              position: relative;
              overflow: hidden;
              &:hover
                .detail
                  transform: translateY(0%);
              img
                width: 100%
                height: 100%
                vertical-align: middle;
              .detail
                $cram()
                background: #4A1143;
                border: 3px solid white;
                color: white
                display: flex;
                flex-direction column
                justify-content: center;
                align-items: center;
                transition: .6s
                transform: translateY(100%);
                .name
                  font-size: 1.8rem
                  font-weight: bold;
                  margin-bottom: 2rem
                .link
                  font-size: 1.4rem
                  font-weight: bold;
                  border: 2px solid white
                  line-height: 3rem
                  width: 12rem
                  text-align: center;
