@require '../../styles/base'

.route-works
  font-size: $rem(1.4)
  .head
    background:url(./headbg.png)
    .inner
      width: 1200px
      margin: auto;
      color: white
      .projects
        display: flex;
        justify-content: space-between;
        padding-top: $rem(1.5)
        >a
          margin-left: $rem(3)
          &:nth-of-type(1)
            margin-left: 0
            margin-right: auto;
      .img1
        margin-top: $rem(13)
  .body
    .inner
      width: 1200px
      margin: auto;
      color: #333
      .img2
        padding-top: $rem(15)
        text-align: center;
      .img3
        padding-top: $rem(10)
        text-align: center;
      .contact
        padding-top: $rem(10)
        text-align: center;
        a
          display: inline-block;
          border: 2px solid #4E4E4E;
          line-height: $rem(3)
          width: $rem(9)
      .foot
        border-top: 2px solid #4E4E4E
        margin-top: $rem(10)
        .projects
          display: flex;
          justify-content: space-between;
          padding: $rem(2.5) 0
          >a
            margin-left: $rem(3)
            &:nth-of-type(1)
              margin-left: 0
              margin-right: auto;
