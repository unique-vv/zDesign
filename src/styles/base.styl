//@import-only

$gray-lightest = #fafafa
$gray-lighter = #eee
$gray-light = #d7d7d7
$gray = #a8a8a8
$gray-dark = #666
$gray-darker = #333

$primary = #2baa54
$plain = $gray-dark
$success = #057afa
$fail = #B03060
$info = #5bc0de
$note = #FE9A76
$warning = #FFD700
$danger = #eb6100

$font-xxs = 1rem
$font-xs = 1.2rem
$font-sm = 1.4rem
$font-md = 1.6rem
$font-lg = 1.8rem
$font-xl = 2rem
$font-xxl = 2.2rem

$space-xxs = 2.8rem
$space-xs = 3.2rem
$space-sm = 3.6rem
$space-md = 4rem
$space-lg = 4.4rem
$space-xl = 4.8rem
$space-xxl = 5.2rem

$radius-xs = .2rem
$radius-sm = .5rem
$radius-md = .8rem
$radius-lg = 1.1rem
$radius-xl = 1.4rem

$faster = .2s
$fast = .4s
$fit = .6s
$slow = .8s
$slower = 1s

$line-height = 1.4

//mixins
$stroke(color=$primary, width=1px)
  text-shadow color width 0 0,color 0 width 0,color (-(width)) 0 0,color 0 (-(width)) 0

$cram()
  position absolute
  top 0
  right 0
  bottom 0
  left 0

$mask()
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0,0,0,.5)
